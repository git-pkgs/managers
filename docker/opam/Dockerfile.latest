# opam latest
FROM ocaml/opam:debian-12-opam AS ocaml
FROM golang:1.25-bookworm

# Copy opam from official image
COPY --from=ocaml /usr/bin/opam /usr/local/bin/opam

RUN apt-get update && apt-get install -y --no-install-recommends git && rm -rf /var/lib/apt/lists/*

WORKDIR /app
COPY go.mod go.sum ./
RUN go mod download
COPY . .

CMD ["go", "test", "./...", "-v"]
